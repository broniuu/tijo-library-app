@inject NavigationManager NavigationManager

<div class="alert alert-secondary mt-4">
    <span class="oi oi-pencil me-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        Click
        <a target="_blank" style="cursor: pointer;" class="font-weight-bold link-dark" @onclick="Navigate">here</a>
    </span>
    to visti our online library
</div>

@code {
    [Parameter]
    public string? Title { get; set; }

    void Navigate() => NavigationManager.NavigateTo("books");
}
